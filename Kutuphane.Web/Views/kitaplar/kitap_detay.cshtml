@model Kutuphane.Web.Models.tblKitaplarModel.fnGetir
@using Kutuphane.Web
@{
    Fonksiyonlar fn = new Fonksiyonlar();
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Kitap Detay";
}
<section class="scrollable wrapper">
    <div class="row">
        <div class="col-lg-12">
            <ul class="breadcrumb jq-rastgele-degerler-ekle">
                <li><a href="/kitaplar"><i class="fa fa-home"></i> Anasayfa</a></li>
                <li><i class="flaticon-envelope"></i> Kitap Detay</li>
                <li></li>
            </ul>
            <div class="clearfix"></div>
            @await Html.PartialAsync("inc_iys_uyari")
            <div class="clearfix"></div>
            <section class="panel">
                <header class="panel-heading">
                    <strong>Kitap Detayı</strong>
                </header>
                <div class="panel-body">
                    <form class="form-horizontal form-kitap-detay" method="post" action="/hareket-kaydet">
                        @Html.AntiForgeryToken()
                        @{
                            if (Model == null || Model.entity == null)
                            {
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <div class="alert alert-danger" role="alert">
                                            Kayıtlarda böyle bir kitap bulunamadı.
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">ID</label>
                                    <div class="col-sm-10">
                                        <input type="hidden" name="kitap_ID" value="@Model.entity.KitapID" />
                                        <p class="form-control-static">@Model.entity.KitapID</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Başlık</label>
                                    <div class="col-sm-10">
                                        <p class="form-control-static">@Model.entity.Baslik</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">ISBN</label>
                                    <div class="col-sm-10">
                                        <p class="form-control-static">@Model.entity.ISBN</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Kapak Fiyatı</label>
                                    <div class="col-sm-10">
                                        <p class="form-control-static">@Model.entity.KapakFiyati</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Yayın Yılı</label>
                                    <div class="col-sm-10">
                                        <p class="form-control-static">@Model.entity.YayinYili</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Ad</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="ad" class="form-control jq-ad" placeholder="Ad" autocomplete="off" data-required="true" data-maxlength="50" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Soyad</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="soyad" class="form-control jq-soyad" placeholder="Soyad" autocomplete="off" data-required="true" data-maxlength="50" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">T.C. No</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="tcno" class="form-control jq-tcno" placeholder="T.C. No" autocomplete="off" data-required="true" maxlength="11" data-minlength="11" data-maxlength="11" data-type="number" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">EPosta</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="eposta" class="form-control jq-eposta" placeholder="EPosta" autocomplete="off" data-required="true" data-maxlength="50" data-type="email" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Telefon</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="telefon" class="form-control jq-telefon jq-mask-telefon" placeholder="Telefon" autocomplete="off" data-required="true" data-maxlength="12" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Başlangıç Tarihi</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="baslangic_tarihi" class="form-control jq-baslangic-tarihi jq-datepicker" placeholder="Başlangıç Tarihi" autocomplete="off" data-required="true" data-maxlength="10" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Bitiş Tarihi</label>
                                    <div class="col-sm-10">
                                        <input type="text" name="bitis_tarihi" class="form-control jq-bitis-tarihi jq-datepicker" placeholder="Bitiş Tarihi" autocomplete="off" data-required="true" data-maxlength="10" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-2 col-sm-offset-2">
                                        <input type="submit" value="Kitabı Ödünç Ver" class="btn btn-primary buton" />
                                    </div>
                                </div>
                            }
                        }
                    </form>
                </div>
            </section>
        </div>
    </div>
</section>